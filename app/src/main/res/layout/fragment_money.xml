<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    tools:context=".view.activity.MainActivity">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:indeterminateDuration="10000"
        android:indeterminateDrawable="@anim/rotate_circle"/>
    <LinearLayout
        android:id="@+id/lnMoney"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            style="@style/money_checkpoint"
            android:textColor="#FF9800"
            android:text="150.000.000"/>
        <TextView
            style="@style/money"
            android:text="85.000.000"/>
        <TextView
            style="@style/money"
            android:text="60.000.000"/>
        <TextView
            style="@style/money"
            android:text="40.000.000"/>
        <TextView
            style="@style/money"
            android:text="30.000.000"/>
        <TextView
            style="@style/money_checkpoint"
            android:textColor="#FFEB3B"
            android:layout_marginHorizontal="15dp"
            android:text="22.000.000"/>
        <TextView
            style="@style/money"
            android:text="14.000.000"/>
        <TextView
            style="@style/money"
            android:text="10.000.000"/>
        <TextView
            style="@style/money"
            android:text="6.000.000"/>
        <TextView
            style="@style/money"
            android:text="3.000.000"/>
        <TextView
            style="@style/money_checkpoint"
            android:textColor="#03A9F4"
            android:layout_marginHorizontal="30dp"
            android:text="2.000.000"/>
        <TextView
            style="@style/money"
            android:text="1.000.000"/>
        <TextView
            style="@style/money"
            android:text="600.000"/>
        <TextView
            style="@style/money"
            android:text="400.000"/>
        <TextView
            style="@style/money"
            android:text="200.000"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="bottom|end"
        android:src="@mipmap/ic_arrow"/>
    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="#673AB7"
        android:text="Back"/>
</FrameLayout>