<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnSetting"
    android:background="@color/purple"
    android:orientation="vertical">
    <TableRow
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:text="SETTING"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:gravity="center"
            android:src="@drawable/ic_setting"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CCFFFFFF">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@drawable/ic_person"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:orientation="vertical">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tvUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingVertical="10dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="OHIO OHIO OhIO HD"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/pbLoading"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:indeterminateTint="#9C27B0"
                        android:background="#00000000"/>
                    <EditText
                        android:visibility="gone"
                        android:id="@+id/edtUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingVertical="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:text="OHIO OHIO"/>
                    <ImageView
                        android:visibility="visible"
                        android:id="@+id/ivEdit"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:tint="@color/black"
                        android:src="@drawable/ic_edit"
                        tools:ignore="UseAppTint" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivCancel"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:tint="#FF0057"
                        android:src="@drawable/ic_close"
                        tools:ignore="UseAppTint" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivConfirm"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:tint="#009688"
                        android:src="@drawable/ic_done"
                        tools:ignore="UseAppTint" />
                </TableRow>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvWarning"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:text="Username must have 1-17 characters in length"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="ksjahjkdhaskdhk@gamil.com"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_border_light"
            android:paddingHorizontal="20dp">
            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Change password"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_border_light"
            android:paddingHorizontal="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingVertical="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Sign out"/>
            <ImageView
                android:id="@+id/ivSignOut"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="center"
                android:tint="@color/black"
                android:src="@drawable/ic_exit"
                tools:ignore="UseAppTint" />
        </TableRow>
    </LinearLayout>

</LinearLayout>